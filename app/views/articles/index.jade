extends ../layouts/default

block main
  h1 Articles

block content
  each article in articles
    .article
      a.title(href='/articles/'+article.id, title=article.title) #{article.title}
      p=article.body
      .author
        span= formatDate(article.createdAt, "%b %d, %Y at %I:%M %p")
        span &nbsp;| Author :&nbsp;
        a(href="/users/"+article.user_id)=article.user_id
        | &nbsp;|&nbsp;

  if (pages > 1)
    .pagination
      ul
        != createPagination(pages, page)
